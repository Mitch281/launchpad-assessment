generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DB_URL")
}

model User {
    id       Int     @id @default(autoincrement())
    username String  @unique
    email    String  @unique
    isAdmin  Boolean
    Task     Task[]
}

model Task {
    id          Int          @id @default(autoincrement())
    user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      Int
    title       String
    description String
    priority    TaskPriority
    dueDate     DateTime     @default(now())
}

enum TaskPriority {
    low
    medium
    high
}
